<mvc:View xmlns:microchart="sap.suite.ui.microchart"   controllerName="project1.controller.View1" 
            xmlns:mvc="sap.ui.core.mvc" 
            displayBlock="true" 
            xmlns:uxap="sap.uxap" 
            xmlns="sap.m"
            xmlns:html="http://www.w3.org/1999/xhtml" 
            xmlns:layout="sap.ui.layout" 
            xmlns:layout1="sap.ui.commons.layout"
            xmlns:core="sap.ui.core"
            xmlns:f="sap.f"
            xmlns:custom="project1.control"
	        xmlns:grid="sap.ui.layout.cssgrid">

	<Page
		id="idPage"
		title=" Intelligent Clipping"
        showHeader="false"
        showSubHeader="true"        
		class= "sapUiResponsivePadding--header pageStyle" >
		<!-- this CSS class add a standard spacing to all the page content -->        
                    
		<content>

            <Toolbar design="Solid" class="sapUiMediumMargin sapUiResponsiveContentPadding noBottomBorder">
                <VariantManagement id="vm"
                    select="onSelect"
                    save="onSave"
                    manage="onManage"
                    selectedKey="Steel"
                    defaultKey="Steel"
                    showFooter="false"
                    popoverTitle="Materials">
                    <items>
                        <VariantItem key="Steel" title="Steel"
                            author="B"
                            favorite="true"
                            visible="true"
                            executeOnSelect="false"
                            rename="false"
                            changeable="false"
                            remove="false"
                            sharing="public" />
                        <VariantItem key="Oil" title="Oil"
                            author="A"
                            favorite="true"
                            visible="true"
                            executeOnSelect="false"
                            rename="true"
                            changeable="true"
                            remove="true"
                            sharing="private" />
                        <VariantItem key="Brazil" title="Brazil"
                            author="A"
                            favorite="true"
                            visible="true"
                            executeOnSelect="true"
                            rename="true"
                            changeable="true"
                            remove="true"
                            sharing="private" />
                    </items>
                </VariantManagement>
                <ToolbarSpacer />
                <HBox >
                    <DatePicker id="iFrom" value="{/from}" valueFormat="dd/MM/yyyy" liveChange=".validateField" 
                        change=".validateField" displayFormat="dd/MM/yyyy" required="true" />                    
                </HBox>
                
            </Toolbar>

		<!-- <mc:StackedBarMicroChart size="XS" precision="0" class="sapUiSmallMargin" >            
