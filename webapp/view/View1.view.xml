                        -->
                        <!--<VBox id="idVBoxNews" />-->
                        
                        <f:GridList id="grid1"
                                    items="{news>/news}">
                            <f:customLayout>
                                <grid:ResponsiveColumnLayout />
                            </f:customLayout>
                            
                            <f:GridListItem id="gridListItemId">
                                <VBox class="VBox">
                                    
                                    <Image class="img" src="{news>image}"/>
                                     
                                    <VBox class="content">
                                        <Text class="title" text="{news>title}" />
                                        <Text class="author" text="{news>author}" />
                                    </VBox>
                                </VBox>
                            </f:GridListItem>
                        </f:GridList>
                        

