<mvc:View   controllerName="project1.controller.View1" 
            xmlns:mvc="sap.ui.core.mvc" 
            displayBlock="true" 
            xmlns:uxap="sap.uxap" 
            xmlns="sap.m"
            xmlns:html="http://www.w3.org/1999/xhtml" 
            xmlns:layout="sap.ui.layout" 
            xmlns:layout1="sap.ui.commons.layout"
            xmlns:core="sap.ui.core"
            xmlns:f="sap.f"
	        xmlns:grid="sap.ui.layout.cssgrid">

    <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" >
        <uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle id="ObjDyn1" backgroundDesign="Translucent">
				<uxap:heading>		
                        <uxap:ObjectPageHeader  id="TTL1" objectTitle="Brazil" showTitleSelector="true"
                                                titleSelectorPress="handleTitleSelectorPress"
                                                showMarkers="false"></uxap:ObjectPageHeader>
						
				</uxap:heading>
				<uxap:actions>
						<VBox>
                        <Label text="From*"></Label>
                        <DatePicker id="iFrom" value="{/from}" valueFormat="dd/MM/yyyy" liveChange=".validateField" 
                        change=".validateField" displayFormat="dd/MM/yyyy" required="true"></DatePicker>
					</VBox>					
				</uxap:actions>				
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>
        <uxap:headerContent>
                    <VBox>
                        <Button text="Load" press="loadClipping" type="Emphasized"></Button>        			
                    </VBox>	
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false" id="section1" visible="true" showTitle="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="section1_SS1" titleUppercase="false">
                        <!-- Corpo do Bloco de Notícias -->
                        <!-- Adicione o VBoxNews aqui                        
